<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="5dip"
    android:paddingRight="5dip">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="85dip"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/student_border"
        android:layout_marginBottom="3dip">
        <ImageView
            android:id="@+id/fd_Icon1"
            android:layout_width="80dip"
            android:layout_height="80dip" >
        </ImageView>

        <TextView android:text="Phung Minh Tung"
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@+id/fd_Icon1"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <TextView android:text="SE03003"
            android:id="@+id/studentID_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fd_Icon1"
            android:layout_below="@+id/name_text"
            android:layout_marginLeft="10dip"
            android:textSize="15dp">
        </TextView>

        <LinearLayout
            android:id="@+id/history"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/studentID_text"
            android:layout_marginTop="5dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/his_attend_text" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:id="@+id/imageView2"
                android:src="@drawable/dark_green_round_with_stroke"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="10dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/his_late_text" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:id="@+id/imageView3"
                android:src="@drawable/orange_round_with_stroke"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="10dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/his_absent_text" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:id="@+id/imageView4"
                android:src="@drawable/red_round_with_stroke"
                android:layout_marginLeft="3dip"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
